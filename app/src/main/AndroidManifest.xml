<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caravaino.activities">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.caravaino.activities.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.caravaino.activities.DeviceListActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.caravaino.activities.ledControl"
            android:label="LED Control"></activity>
        <activity
            android:name="com.caravaino.activities.AboutActivity"
            android:label="@string/title_activity_about"></activity>
        <activity
            android:name="com.caravaino.activities.MainMenuActivity"
            android:label="MainMenu"></activity>
        <activity
            android:name="com.caravaino.activities.LucesActivity"
            android:label="Luces"></activity>
        <activity
            android:name="com.caravaino.activities.TemperaturaActivity"
            android:label="Temperatura"></activity>
    </application>
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>